<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regcvr"
    android:orientation="vertical"

    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/register_and_signin"
        android:textAllCaps="true"
        android:textColor="@color/Crimson"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtUname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#6ef4f4f4"
        android:drawablePadding="78dp"

        android:ems="1"
        android:hint="@string/user_name"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="#fff"
        android:autofillHints="" />

    <EditText
        android:id="@+id/txtPasswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#6ef4f4f4"
        android:drawablePadding="78dp"

        android:ems="1"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="#fff"
        android:autofillHints="" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:padding="2dp"
        android:textSize="18sp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button
            android:id="@+id/regBtn"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="4.5"
            android:background="@color/FireBrick"
            android:padding="16dp"
            android:text="@string/regi"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight=".5" />

        <Button
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"

            android:background="@color/Chartreuse"
            android:padding="16dp"
            android:text="@string/signin"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>